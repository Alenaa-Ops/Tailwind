                </div>
            </div>
        </div>
        <!-- 5 Oldest Movies -->
        <div class="mb-8">
            <h2 class="text-3xl font-bold mb-4 text-gray-300">5 Oldest Movies</h2>
            <!-- 5 Oldest Movies Component -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Movie cards go here -->
                <!-- Example Movie Card Component -->
                <div class="bg-gray-700 p-6 rounded-lg shadow-md transition transform hover:scale-105">
                    <!-- Movie content -->
                    <img src="https://via.placeholder.com/300" alt="Movie Poster" class="mb-4 rounded-md">
                    <h3 class="text-xl font-bold mb-2">Movie Title</h3>
                    <p class="text-gray-400">Release Year: 2023</p>
                    <p class="text-gray-400">Price: $9.99</p>
                </div>
            </div>
        </div>
        <!-- 5 Cheapest Movies -->
        <div class="mb-8">
            <h2 class="text-3xl font-bold mb-4 text-gray-300">5 Cheapest Movies</h2>
            <!-- 5 Cheapest Movies Component -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Movie cards go here -->
                <!-- Example Movie Card Component -->
                <div class="bg-gray-700 p-6 rounded-lg shadow-md transition transform hover:scale-105">
                    <!-- Movie content -->
                    <img src="https://via.placeholder.com/300" alt="Movie Poster" class="mb-4 rounded-md">
                    <h3 class="text-xl font-bold mb-2">Movie Title</h3>
                    <p class="text-gray-400">Release Year: 2023</p>
                    <p class="text-gray-400">Price: $9.99</p>
                </div>
            </div>
        </div>
        <!-- Most Expensive Order -->
        <div>
            <h2 class="text-3xl font-bold mb-4 text-gray-300">Most Expensive Order</h2>
            <!-- Most Expensive Order Component -->
            <div class="bg-gray-700 p-6 rounded-lg shadow-md transition transform hover:scale-105">
                <!-- Order content -->
                <h2 class="text-2xl font-bold mb-4">Most Expensive Order</h2>
                <p class="text-gray-400">Customer: John Doe</p>
                <p class="text-gray-400">Total Amount: $99.99</p>
            </div>
        </div>
    </section>
    <!-- Footer Section -->
    <footer class="bg-blue-500 text-white py-4 mt-8">
        <div class="container mx-auto text-center">
            <p>Movie Shop 2024</p>
        </div>
    </footer>
</body>
</html>
